<div class="form-outer-div">


	<h2>Admin Sign up</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-class"}) do |f| %>
		<%= render "devise/shared/error_messages", resource: resource %>
		
		<div class= "form-inner-div">

		
			<%= f.label :first_name,"First Name", autofocus: true %>
			<%= f.text_field :first_name, placeholder: "First Name" %>

			<%= f.label :last_name, "Last Name" %>
			<%= f.text_field :last_name, placeholder: "Last Name" %>

			<%= f.label :contact, "Contact"%> 
			<%= f.text_field :contact, placeholder: "Contact"%>
			<p class="errors"><%= @admin.errors.full_messages_for(:contact).first%></p>

			<%= f.label :email %>
			<%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>

			<%= f.label :password %>
				<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> characters minimum)</em>
				<% end %>
			<%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>

			<%= f.submit "Create Account" %>
		
	<% end %>

	<%= render "devise/shared/links" %>
	</div>
</div>
