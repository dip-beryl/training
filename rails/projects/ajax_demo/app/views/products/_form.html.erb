<%= form_with(model: @product, remote: true, id: "product-form") do |form| %>

      <%= form.label :name %>
      <%= form.text_field :name %>

      <%= form.label :price %>
      <%= form.text_field :price %>

      <%= form.label :description %>
      <%= form.text_area :description %>
      <br>
      <%= form.submit %>
  <% end %>