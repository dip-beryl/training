<div class="form-outer-div">

  <h2>Admin Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-class"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class= "form-inner-div">

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <span class="show-hide-button" role="button" tabindex="0">Show</span>
      <%= f.password_field :password, autocomplete: "current-password", class: "password-field"%>
    </div>

    <!--button type=button class="show-hide-button">Show</button -->

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>

<script>
  
  // jQuery code for password show hide
  $(document).ready(function(){
    $(".show-hide-button").click(function(){
      if ($(".show-hide-button").text() == "Show"){
        $(".show-hide-button").text("Hide");
        $(".password-field").attr("type", "text");
      }
      else{
        $(".show-hide-button").text("Show");
        $(".password-field").attr("type", "password");
      }
    });
  });

</script>