<div class="div_box_class">

<h1>Register</h1>

<!--
<% @user.attributes.keys.each do |attribute|%>
    <div style= "color:red;"> <%= @user.errors.full_messages_for(attribute.to_sym).first%> </div>
<% end %> <br>
-->

<%= form_with model: @user, html: {class: :form_class} do |form|%>

<div class="div_form_class">
    <%= form.label :name, "Name", class: "form_label" %> 
    <%= form.text_field :name, class: "form_input" %> <br><br>
    <p class="errors"><%= @user.errors.full_messages_for(:name).first %></p>

    <%= form.label :contact, "Contact", class: "form_label" %> 
    <%= form.text_field :contact, class: "form_input" %> <br><br>
    <p class="errors"><%= @user.errors.full_messages_for(:contact).first%></p>

    <%= form.label :email, "Email", class: "form_label" %> 
    <%= form.email_field :email, class: "form_input" %><br><br>
    <p class="errors"><%= @user.errors.full_messages_for(:email).first%></p>

    <%= form.label :category, "Main Categories : " %>
    <%= form.collection_check_boxes( :category, {"Electronics"=> 0, "Cloths"=>1, "Toys"=>2, "Furniture"=>3, "Smart Phones"=>4}, :last, :first) do |category|%> 
        <div class="form_check_box_heck_div_inline">
            <%= category.label class: "check_box_label_class"%>
            <%= category.check_box class: "check_box_input_class"%>
        </div>
    <% end%> <br>
    

    <%= form.label :password, "Password", class: "form_label" %> 
    <%= form.password_field :password, class: "form_input" %> <br><br>
    <p class="errors"><%= @user.errors.full_messages_for(:password).first%></p>

    <%= form.label :password_confirmation, "Confirm Password", class: "form_label" %> 
    <%= form.password_field :password_confirmation, class: "form_input" %> <br><br>
</div>

    <%= form.submit "Create Account", class: "form_submit_button"%>

</div>
<%end%>
